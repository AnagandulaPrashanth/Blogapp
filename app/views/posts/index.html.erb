<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<%= @posts.all.collect(&:name) %><br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Sal</th>
      <th>Description</th>
      <td>user_id</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.lastname %></td>
        <td><%= post.sal %></td>
        <td><%= post.description %></td>
        <td><%= post.user.email if post.user.present? %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

